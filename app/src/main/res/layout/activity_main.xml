        tools:layout_editor_absoluteY="48dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="证件号码:XXXXXXX"
        android:textSize="30dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="48dp" />
